# settings
auto-reload             yes
error-log               "~/.newsbeuter/error.log"
cleanup-on-quit         yes
keep-articles-days      180
refresh-on-startup      yes
reload-time             15
show-read-articles      no
show-read-feeds         no
suppress-first-reload   yes
text-width              72

# programs
browser         "links"
player          "mplayer"

# podcasts
download-path   "~/Downloads/podcasts/%n"
max-downloads   2

# key bindings
unbind-key  J
bind-key    J pagedown feedlist
bind-key    J next-feed articlelist
bind-key    J next article
unbind-key  K
bind-key    K pageup feedlist
bind-key    K prev-feed articlelist
bind-key    K prev article
unbind-key  j
bind-key    j next feedlist
bind-key    j next articlelist
bind-key    j down article
bind-key    j next tagselection
bind-key    j next filebrowser
unbind-key  k
bind-key    k prev feedlist
bind-key    k prev articlelist
bind-key    k up article
bind-key    k prev tagselection
bind-key    k prev filebrowser

bind-key    i quit article
bind-key    i quit articlelist

# colors
color background   white   black
color listnormal   white   black
color listfocus    white   blue    bold
color info         blue    default bold
color article      white   black
